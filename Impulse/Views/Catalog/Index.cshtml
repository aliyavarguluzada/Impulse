@using Impulse.DTOs.Cvs
@model List<CvsDto>
<!-- Main -->
<main>
    <!-- Catalog Main -->
    <div class="container">

        <div class="container mt-5">
            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="image-container">
                            <img src="~/images/@item.ImageName" alt="" class="img-fluid image fixed-size-image" data-toggle="modal"
                                 data-target="#myModal_@item.CvId">
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Modal for Image 1 -->
        @foreach (var image in Model)
        {
            <div class="modal fade" id="myModal_@image.CvId">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title"></h4>
                            <button type="button" class="close" data-dismiss="modal" style="color:cadetblue">&times;</button>
                        </div>
                        <div class="modal-body">
                            <img src="~/images/@image.ImageName" alt="Image" class="img-fluid enlarged-image">
                        </div>
                    </div>
                </div>
            </div>
        }



        <!-- Catalog Main End -->
</main>
<!-- Main End -->

<style>
<!--sad-->
    .fixed-size-image {
        width: 450px;
        height: 450px;
        object-fit: cover;
    }
</style>





