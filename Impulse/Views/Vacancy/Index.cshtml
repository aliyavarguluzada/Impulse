@model List<VacancyDto>

<main>
    <!-- Example job vacancy listings using Bootstrap classes -->
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-12">
                    <div class="vacancy mb-3 border p-3">
                        <div class="row">
                            <div class="col-md-2 vacancy-mobile">
                                <img style="max-width: 80px; max-height: 80px;"
                                     class="company-logo"
                                     src="~/images/logos/@item.CompanyLogoImage"
                                     alt="Company Logo" />
                            </div>
                            <div class="col-md-6 vacancy-mobile-2">
                                <h3 class="job-title">@item.VacancyName</h3>
                                <div class="row">
                                    <div class="col-md-4">
                                        <p><i class="fas fa-building"></i> Company</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p><i class="fas fa-map-marker"></i></p>
                                    </div>
                                    <div class="col-md-4">
                                        <p><i class="fas fa-calendar"></i> Son gün: @item.ExpireDate</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="floating-div" style="width: 33%; float: right">
                                    <p class="full-time">
                                        <i class="fas fa-clock"></i> Full-time
                                    </p>
                                    <p><i class="fas fa-calendar"></i> @item.StartDate</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</main>